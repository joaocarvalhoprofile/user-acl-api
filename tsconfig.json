{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/core/@types",
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}